\input{regression-test}

\NeedsTeXFormat{LaTeX2e}
\documentclass{minimal}
\usepackage{textcomp}
\usepackage{qstest}
\makeatletter
\let\BeginDocumentText\@empty
\def\TestEncoding#1#2{%
  \SelectInputMappings{#2}%
  \Expect*{\SIE@Encoding}{#1}%
  \Expect*{\inputencodingname}{#1}%
  \g@addto@macro\BeginDocumentText{%
    \SelectInputMappings{#2}%
    \Expect*{\SIE@Encoding}{#1}%
    \textbf{\SIE@Encoding:} %
    \kvsetkeys{test}{#2}\par
  }%
}
\def\TestKey#1#2{%
  \define@key{test}{#1}{%
    \sbox0{##1}%
    \sbox2{#2}%
    \Expect*{wd:\the\wd0, ht:\the\ht0, dp:\the\dp0}%
           *{wd:\the\wd2, ht:\the\ht2, dp:\the\dp2}%
    [#1=##1] % hash-ok
  }%
}
\RequirePackage{keyval}
\TestKey{adieresis}{\"a}
\TestKey{germandbls}{\ss}
\TestKey{Euro}{\texteuro}
\makeatother
\usepackage[
  warning,%
  utf8=utf8,
]{selinput}
\inputencoding{utf8}

\START
\begin{qstest}{preamble}{}
  \TestEncoding{x-iso-8859-15}{%
    adieresis=^^e4,%
    germandbls=^^df,%
    Euro=^^a4,%
  }%
  \TestEncoding{x-cp1252}{%
    adieresis=^^e4,%
    germandbls=^^df,%
    Euro=^^80,%
  }%
  \TestEncoding{utf8}{%
    adieresis=^^c3^^a4,%
    germandbls=^^c3^^9f,%
  }%
\end{qstest}
\begin{document}
\begin{qstest}{document}{}
  \BeginDocumentText
\end{qstest}
\end{document}
